<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="org.example.javafxtest.appControllers.CalculatorController"
          alignment="CENTER" hgap="10" vgap="10"
          xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/8.0.171"
          stylesheets="@../Styles/style.css"
>

        <TextField fx:id="display"  styleClass="display" editable="false" GridPane.columnSpan="4" maxHeight="400"/>
        <Button text="C" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="secondary-button"/>
        <Button text="±" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="secondary-button"/>

        <Button text="\%" GridPane.rowIndex="0" GridPane.columnIndex="2" styleClass="secondary-button"/>
        <Button text="÷" GridPane.rowIndex="0" GridPane.columnIndex="3" styleClass="special-button"/>

        <fx:include source="navMenu.fxml" GridPane.rowIndex="5" GridPane.columnSpan="4"/>

</GridPane>