<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.javafxtest.appControllers.MenuController"
            stylesheets="@../Styles/MenuStyle.css">
    <top>
        <Text styleClass="MenuTitle"  BorderPane.alignment="CENTER" text="Menu Title" />
    </top>
    <center>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <Button fx:id="CalcBtn" text="Calc" onAction="#onCalcButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Button fx:id="DiceBtn" text="Dice" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        </GridPane>
    </center>
</BorderPane>




